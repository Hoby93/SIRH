@{
  ViewData["Title"] = "Login";
}

<style>
  .page {
    border: 1px solid grey;
  }
</style>

<div class="container-scroller">
  <div class="container-fluid page-body-wrapper full-page-wrapper">
    <div class="content-wrapper d-flex align-items-center auth px-0">
      <div class="row mx-12 col-md-12">
        <div class="col-lg-6 mx-auto card-service" style="max-width: unset;">
          <div class="auth-form-light text-left py-5 px-4 px-sm-5 mb-0">
            <div class="mb-3">
              <a href="#" class="navbar-brand text-black">Seo<span class="text-primary">Gram.</span></a><br>
            </div>
            <h4>Creation compte</h4>
            <form class="pt-3" method="post" asp-controller="Login" asp-action="AddCandidat">
              <div id="page01">
                <div class="form-group">
                  <label class="text-grey" for="fname">Nom</label>
                  <input type="text" name="nom" class="form-control" id="exampleInputEmail1" placeholder="Entrez votre nom">
                </div>
                <div class="form-group">
                  <label class="text-grey" for="fname">Prenom</label>
                  <input type="text" name="prenom" class="form-control" id="exampleInputEmail1" placeholder="Entrez votre prenom">
                </div>
                <div class="form-group">
                  <label class="text-grey" for="fname">Date de naissance</label>
                  <input type="date" name="dtn" class="form-control" id="exampleInputEmail1">
                </div>
                <div class="form-group">
                  <label for="action">Genre</label>
                  <select name="genre" class="custom-select">
                      <option value="0">Homme</option>
                      <option value="1">Femme</option>
                  </select>
                </div>
                <div class="">
                  <br><button type="button" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" onclick="javascript:display_hidde('page02', 'page01')">
                    Suivant 
                  </button>
                </div>
              </div>
              <div id="page02" class="hidde">
                <div class="form-group">
                  <label class="text-grey" for="fname">Telephone</label>
                  <input type="number" name="tel" class="form-control" id="exampleInputEmail1" placeholder="Numero de telephone">
                </div>
                <div class="form-group">
                  <label class="text-grey" for="fname">Email</label>
                  <input type="email" name="email" class="form-control" id="exampleInputEmail1" placeholder="Adresse email">
                </div>
                <div class="form-group">
                  <label class="text-grey" for="fname">Adresse</label>
                  <input type="text" name="adresse" class="form-control" id="exampleInputEmail1" placeholder="Votre adresse">
                </div>
                <div class="form-group">
                  <label class="text-grey" for="fname">Mot de passe</label>
                  <input type="password" name="mdp" class="form-control" id="exampleInputPassword1" placeholder="Mot de passe">
                </div>
                <div class="">
                  <br><button type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" onclick="javascript:pageTwo('supression')">
                    Confirmer 
                  </button>
                </div>
              </div>
              <div class="text-center mt-4 font-weight-light mb-0">
                Avez vous une compte? <a asp-area="" asp-controller="Login" asp-action="Index" class="text-primary">Se connecter</a>
              </div>
            </form>
          </div>
          <div class="social-media-button mt-0" style="margin-top: -50px">
            <a id="page01-page" class="page" style="height: 10px;width: 10px;background-color: #6C55F9;" onclick="javascript:display_hidde('page01', 'page02')"></a>
            <a id="page02-page" class="page" style="height: 10px;width: 10px;" onclick="javascript:display_hidde('page02', 'page01')"></a>
          </div>
        </div>
      </div>
    </div>
    <!-- content-wrapper ends -->
  </div>
  <!-- page-body-wrapper ends -->
</div>
<!-- container-scroller -->

<script>
  function display_hidde(displayId, hiddeId) {
    var display = document.getElementById(displayId);
    var hidde = document.getElementById(hiddeId);
    var displayLink = document.getElementById(displayId + "-page");
    var hiddeLink = document.getElementById(hiddeId + "-page");

    display.style.display = "block";
    hidde.style.display = "none";
    displayLink.style.backgroundColor = "#6C55F9";
    hiddeLink.style.backgroundColor = "#F6F5FC";
  }
</script>