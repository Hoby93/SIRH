@model Services

<div class="col-md-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body col-md-6">
            <h4 class="card-title">Modifier service</h4>
            @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
            {
                <div class="alert alert-danger">
                    @ViewBag.ErrorMessage
                </div>
            }
            <form asp-controller="Services" asp-action="modifierService" method="GET">
                <input type="hidden" name="idservice" value="@Model.id">
                <div class="form-group">
                    <label for="libelle">Libell√©</label>
                    <input type="text" class="form-control" id="libelle" name="libelle" value="@Model.Libelle">
                </div>
                <button type="submit" class="btn btn-primary">Valider</button>
               
            </form>
        </div>
    </div>
</div>


