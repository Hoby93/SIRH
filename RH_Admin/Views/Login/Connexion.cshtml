@{
  ViewData["Title"] = "Connexion";
}

<div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
      <div class="content-wrapper d-flex align-items-center auth px-0">
        <div class="row w-100 mx-0">
          <div class="col-lg-4 mx-auto">
            <div class="auth-form-light text-left py-5 px-4 px-sm-5">
              <div class="brand-logo">
                <img src="../../images/logo.svg" alt="logo">
              </div>
              <h4>Bonjour! bienvenue</h4>
              @if(ViewBag.Exception != null) {
                <h6 class="font-weight-light text-danger">@ViewBag.Exception</h6>
              } else {
                <h6 class="font-weight-light">Connectez vous</h6>
              }
              <form method="post" asp-controller="Login" asp-action="Check" class="pt-3">
                <div class="form-group">
                  <input type="email" class="form-control form-control-lg" name="email" id="exampleInputEmail1" placeholder="Adresse email">
                </div>
                <div class="form-group">
                  <input type="password" class="form-control form-control-lg" name="mdp" id="exampleInputPassword1" placeholder="Mot de passe">
                </div>
                <div class="my-2 d-flex justify-content-between align-items-center">
                  <div class="form-check">
                    <label class="form-check-label text-muted">
                      <input type="checkbox" class="form-check-input">
                      Enregistrer
                    </label>
                  </div>
                </div>
                <div class="mt-3">
                  <button type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">SE CONNECTER</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
      <!-- content-wrapper ends -->
    </div>
    <!-- page-body-wrapper ends -->
</div>
